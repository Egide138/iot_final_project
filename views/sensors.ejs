<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Document</title>
</head>

<body>
        <div class="jumbotron text-center">
            <h1>My sensors Page</h1>
            <p>You can check the status of the your sensors!</p>
            <p>Status is: True (ON) or False (OFF)</p>
        </div>
        <div class="container text-center">
            <div id="mysensor"></div>
        </div>
        <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io()
        // make connection with server from user side
        socket.on('connect', function () {
            console.log('Connected to Server')
        })
        socket.on('newMessage', (newMessage) => {
            console.log('newMessage', newMessage);
            const element = document.getElementById("mysensor");
            element.innerHTML = `<div class="row">
                <div class="col-sm-6">
                    <h3>Ultrasonic Sensor</h3>
                    <p>Status: ${newMessage.status1}</p>
                </div>
                <div class="col-sm-6">
                    <h3>Pir</h3>
                    <p>Status: ${newMessage.status2}</p>
                </div>
            </div>`
        })

    </script>
</body>

</html>